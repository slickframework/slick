    <![endif]-->
</head>

<body>

<!-- Begin page content -->
<div class="container">
    <h3 class="page-header">{{ handler.getExceptionName }}</h3>
    <div class="alert alert-danger">
        <strong>Message:</strong> {{ exception.getMessage() }}
    </div>

    <div class="panel panel-info">
        <div class="panel-heading   ">
            Stack trace
        </div>
        <div class="panel-body">
<pre>
            {{- exception.getTraceAsString()|raw }}
            </pre>
        </div>
    </div>
</div>


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ addJs('jquery.min.js') }}"></script>
<script src="{{ addJs('bootstrap.min.js') }}"></script>
</body>
</html>
